<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"/>

    <com.weiwangcn.betterspinner.library.BetterSpinner
        android:id="@+id/saccos_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="@dimen/button_padding"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:hint="Choose Sacco" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/member_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saccos_spinner"
        android:layout_marginTop="@dimen/button_padding"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Member Number"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_number"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Amount"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Phone Number"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone_number"
        android:layout_below="@+id/phone_number"
        android:id="@+id/cash_hand"
        android:textSize="12sp"
        android:textColor="@color/primary_dark"
        android:textAllCaps="false"
        android:text="*optional"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_btn"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textColor="@color/accent"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/keyline_standard_margin"
        android:layout_marginRight="@dimen/keyline_standard_margin"
        android:layout_marginBottom="@dimen/keyline_standard_margin"
        android:background="@drawable/rectangle_save"/>

</RelativeLayout>
