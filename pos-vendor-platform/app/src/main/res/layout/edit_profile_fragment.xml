<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
             android:id="@+id/toolbar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/button_padding"
        android:layout_marginBottom="@dimen/button_padding"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="First Name"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"
            tools:ignore="MissingPrefix"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name"
        android:layout_marginBottom="@dimen/bottom_login_spacing"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Amount"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"
            tools:ignore="MissingPrefix"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name"
        android:layout_marginBottom="@dimen/bottom_login_spacing"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Password"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"
            tools:ignore="MissingPrefix"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginBottom="@dimen/bottom_login_spacing"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_states"
            android:hint="Confirm Password"
            android:paddingBottom="42dp"
            android:singleLine="true"
            android:textAlignment="gravity"
            android:textColor="@color/gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/base_font_size"
            tools:ignore="MissingPrefix"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/keyline_standard_margin"
        android:layout_marginRight="@dimen/keyline_standard_margin"
        android:layout_marginBottom="@dimen/keyline_standard_margin">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/save_btn"
            android:text="Save"
            android:textColor="@color/accent"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/button_padding"
            android:background="@drawable/rectangle_save"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cancel_btn"
            android:text="Cancel"
            android:textColor="@color/gray"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/button_padding"
            android:background="@drawable/rectangle_cancel"/>

    </LinearLayout>

</RelativeLayout>
